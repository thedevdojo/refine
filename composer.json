{
    "name": "devdojo/refine",
    "description": "A developer-only Chrome extension and Laravel package for live-editing Blade templates directly in the browser",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "DevDojo",
            "email": "hello@devdojo.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "DevDojo\\Refine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevDojo\\Refine\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DevDojo\\Refine\\RefineServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
