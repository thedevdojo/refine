{
  "manifest_version": 3,
  "name": "Refine - Live Blade Editor",
  "version": "1.0.0",
  "description": "Developer-only tool for live-editing Laravel Blade templates directly in the browser",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "http://*.test/*",
    "https://*.test/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "http://*.test/*",
        "https://*.test/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["monaco-editor.html", "monaco-init.js", "monaco/**/*", "gsap.min.js"],
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "http://*.test/*",
        "https://*.test/*"
      ]
    }
  ]
}
